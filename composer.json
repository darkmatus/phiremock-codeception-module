{
    "keywords" : [
        "http",
        "mock",
        "server",
        "external",
        "acceptance",
        "tests",
        "codeception",
        "module",
        "phiremock"
    ],
     "authors" : [{
            "name" : "Mariano Custiel",
            "email" : "jmcustiel@gmail.com",
            "homepage" : "https://github.com/mcustiel",
            "role" : "Developer"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "Codeception\\Module\\" : "src/Module",
            "Mcustiel\\Phiremock\\Codeception\\Util\\" : "src/Util"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "Mcustiel\\Phiremock\\Codeception\\Module\\Tests\\Helpers\\": "tests/_helpers"
        }
    },
    "name" : "darkmatus/phiremock-codeception-module",
    "type" : "project",
    "description" : "Codeception module for PhireMock. Allows to stub remote services for HTTP requests.",
    "license" : "GPL-3.0-or-later",
    "require" : {
        "php" : ">=8.0",
        "mcustiel/phiremock-client": "^1.0",
        "codeception/codeception" : "5.0.x-dev",
        "codeception/lib-asserts": "^2.0.0"
    },
    "require-dev" : {
        "darkmatus/phiremock-codeception-extension": "^3.0",
        "mcustiel/phiremock-server": "^1.0",
        "codeception/module-asserts": "^3",
        "guzzlehttp/guzzle" : "^7.0"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
